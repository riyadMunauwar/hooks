{
  "name": "riyad/hooks",
  "description": "Lightweight, synchronous, WordPress-style hook system for PHP, production-grade, type-safe and extensible.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Riyad Munauwar",
      "email": "riyadmunauwar@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "autoload": {
    "psr-4": {
      "Riyad\\Hooks\\": "src/"
    },
    "files": [
      "src/Helpers/functions.php"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}